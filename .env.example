# ============================================
# Competitive Evolution POC - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# API Provider Credentials
# ============================================
# OpenAI API key for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek API key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Qwen API key
QWEN_API_KEY=your_qwen_api_key_here

# Sakana AI API Configuration
SAKANA_API_URL=https://api.sakana.ai/v1
SAKANA_API_KEY=your_sakana_api_key_here
SAKANA_API_TIMEOUT=120

# ============================================
# Neo4j Database Configuration
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=pleasechangeme

# Neo4j connection pool settings
NEO4J_MAX_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30
NEO4J_MAX_RETRY_ATTEMPTS=3

# ============================================
# Backend Configuration
# ============================================
# Backend API URL (for frontend)
BACKEND_URL=http://localhost:5000

# Flask/FastAPI configuration
FLASK_ENV=development
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ============================================
# Agent Execution Configuration
# ============================================
# Maximum runtime for a single agent execution (seconds)
AGENT_MAX_RUNTIME=300

# Maximum number of concurrent agents
MAX_CONCURRENT_AGENTS=5

# Agent workspace directory
AGENT_WORKSPACE_DIR=/app/workspaces

# Agent log directory
AGENT_LOG_DIR=/app/logs

# ============================================
# Sakana AI Integration
# ============================================
# Sakana workspace directory
SAKANA_WORK_DIR=/workspace/sakana

# Use Docker for Sakana AI execution
SAKANA_USE_DOCKER=true

# Enable GPU for Sakana AI
SAKANA_GPU_ENABLED=false

# GPU device IDs (comma-separated)
NVIDIA_VISIBLE_DEVICES=all
CUDA_VISIBLE_DEVICES=0

# ============================================
# Monitoring & Observability
# ============================================
# Prometheus port
PROMETHEUS_PORT=9090

# Grafana port and credentials
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Pushgateway port
PUSHGATEWAY_PORT=9091

# ============================================
# Code Execution Sandbox Configuration
# ============================================
# CPU quota for sandbox (1.0 = 1 core)
SANDBOX_CPU_QUOTA=1.0

# Memory limit for sandbox (MB)
SANDBOX_MEM_MB=512

# Task execution timeout (seconds)
TASK_TIMEOUT_SEC=120

# Network access allowlist (comma-separated domains)
EVAL_NET_ALLOWLIST=github.com,pypi.org,huggingface.co

# Enable restricted Python execution
USE_RESTRICTED_PYTHON=true

# ============================================
# Evolution Algorithm Configuration
# ============================================
# Population size
POPULATION_SIZE=20

# Number of generations
MAX_GENERATIONS=100

# Mutation rate
MUTATION_RATE=0.1

# Crossover rate
CROSSOVER_RATE=0.7

# Elite selection count
ELITE_COUNT=2

# ============================================
# Phase 2 Features (Currently Disabled)
# ============================================
# Enable Phase 2 features
ENABLE_PHASE2=false

# Code execution sandbox enabled
CODE_EXECUTION_ENABLED=false

# NLP tagging service enabled
TAGGING_SERVICE_ENABLED=false

# ============================================
# Security Configuration
# ============================================
# JWT secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Session secret
SESSION_SECRET=your_session_secret_here

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Enable CSRF protection
ENABLE_CSRF=true

# ============================================
# Development & Testing
# ============================================
# Enable debug mode (DO NOT use in production)
DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true

# Testing mode
TESTING=false

# ============================================
# Docker Compose Override
# ============================================
# Container name prefix
COMPOSE_PROJECT_NAME=ce-poc
